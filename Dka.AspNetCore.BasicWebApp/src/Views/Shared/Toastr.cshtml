@using Dka.AspNetCore.BasicWebApp.Common.Models.Toastr

<script>
toastr.options = {
  "closeButton": true,
  "debug": false,
  "newestOnTop": false,
  "progressBar": false,
  "positionClass": "toast-top-center",
  "preventDuplicates": false,
  "onclick": null,
  "showDuration": "300",
  "hideDuration": "1000",
  "timeOut": "5000",
  "extendedTimeOut": "1000",
  "showEasing": "swing",
  "hideEasing": "linear",
  "showMethod": "fadeIn",
  "hideMethod": "fadeOut"
};

$(document).ready(function () {
var toastrMessageType = '@(Context.Items[ToastrConstants.MessageType] ?? string.Empty)';
var toastrMessage = '@(Context.Items[ToastrConstants.Message] ?? string.Empty)';

if (toastrMessageType !== '' && toastrMessage !== '') {
  toastr[toastrMessageType](toastrMessage);
}
});
</script>