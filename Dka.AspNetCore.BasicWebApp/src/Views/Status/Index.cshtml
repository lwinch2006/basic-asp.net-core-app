@using Dka.AspNetCore.BasicWebApp.Models.Constants

@{
    ViewData[ViewDataKeys.HtmlPageHeadSectionTitle] = "status";
    ViewData[ViewDataKeys.HtmlPageTopHeaderTitle] = "Status";
    ViewData[ViewDataKeys.ActiveNavigationLink] = "status";
}

<div class="row">
    <div class="col-sm-12">
        <div class="row">
            <div class="col-sm-3">
                <div class="card dka-status-card">
                    <div class="card-header text-center">
                        API
                    </div>
                    <div class="card-body text-center">
                        @if ((bool)ViewData[ViewDataKeys.ApiLiveStatus])
                        {
                            <div class="dka-circle-status dka-green-circle-status"></div>
                        }
                        else
                        {
                            <div class="dka-circle-status dka-red-circle-status"></div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

